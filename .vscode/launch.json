    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}"
        },
        {
            "name": "Launch MCP Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/mcp-server",
            "args": ["start", "--transport", "sse", "--repositories", "examples/shell-commands", "--log-level", "debug"],
            "cwd": "${workspaceFolder}"
        }
    ]
}